    <myScroller :style="$store.state.isBrowser?'padding:2.65rem 0 0;':'padding:3.55rem 0 0;'" :infinite="infinite" :refresh="refresh" :loadRefresh="loadRefresh" :loadInfinite="loadInfinite" ref="myScroller" :showbg="showbg">
