<script>
  import a6 from '../../images/message/6.png';
  import a3 from '../../images/message/3.png';
  import Loading from '@other/loading.vue';
  import Back from '@other/back.vue';
  import shop from '@other/shop.vue';
  import safeHouse from './safeHouse.data'

  export default {
    name: 'safeHouse',
    data() {
      return {
        imgs: {a6: a6, a3: a3},
        isloading: false,
        safeHouse: safeHouse.user,
        dayCount: 0,
        userIncome: 0,
        nearArr: [],
        purse:{

        },
        eventList:[],
      }
    },
    async mounted() {
      const t = this;
      $("body").addClass("gray");
      t.$nextTick(() => {
        t.setBgImg();
      })
      t.$store.dispatch("CHECKMONEY");//查询用户当前的乾坤币
      let result = await this.$server.lowerAgent();
      this.purse = result.data;
      let result1 = await this.$server.getRewardEventList({
        enable:1,
        finished:0,
      })
      let arr=[]
      let list1=result1.data.list
      if(list1&&list1.length>0){
        if(list1.length>4){
          list1.length=4;
        }
        list1.forEach(v=>{
          if(v.finished!=1){
            arr.push(v)
          }
        })
      }
      this.eventList = arr;
      console.log( this.eventList)
      t.$nextTick(()=>{
        t.setBgImg();
      })
      // t.getDayCount();
      // t.getUserIncome();
      // t.getList();
    },
    destroyed() {
      $("body").removeClass("gray");
    },
    components: {
      Loading,
      Back,
      shop,
    },
    methods: {
      linkTo(link, active) {
        let query = null
        if (active) {
          query = {
            active: active
          }
        }
        this.$router.push({
          path: link,
          query: query
        })
      },
      toLink(url){
        if(url){
          let query = {
            showBack:true
          }
          if(url.indexOf('?')!=-1){
            let querystr = url.split("?")[1]
            let queryArr = querystr.split("&");
            queryArr.map(v=>{
              query[v.split("=")[0]] = v.split("=")[1]
            })
          }
          this.$router.push({
            path: "/"+url,
            query:query
          })
        }
      },
      async getDayCount() {
        const t = this;
        try {
          const result = await t.$server.getDayCount();
          t.dayCount = result.data.data;
        } catch (e) {
          console.log(e);
        }
      },
      async getUserIncome() {
        const t = this;
        try {
          const result = await t.$server.getUserIncome();
          console.log(result.data.data)
          t.userIncome = result.data.data;
        } catch (e) {
          console.log(e);
        }
      },
      setBgImg() {
        $("a,i,em,li,div").each(function () {//加载背景图片
          const bgimg = $(this).attr("bgImg");
          if (bgimg) {
            $(this).css({"background-image": "url(" + bgimg + ")"});
            $(this).attr("bgImg", "");
          }
        });
      },
      async getList() {
        // let location = await this.$store.dispatch("getMylocation");
        let data = {
          // latitude:location.lat==0?null:location.lat,
          // longitude: location.lon==0?null:location.lon,
          page: 1,
          rows: 4,
          orderBy: '1'
        }
        let result1 = await this.$server.searchDatingList(data);
        if (result1.data.list) {
          this.nearArr = []
          this.nearArr.push(...result1.data.list);
        }
      },
      toListItem(id) {
        this.$router.push({
          path: "/act",
          query: {
            id: id
          }
        })
      },
    }
  }
</script>
