                  <em v-if="item.activityMethod!=7&&item.activityMethod!=8" :class="'jy_new_love_tit_'+item.activityMethod">{{yuan(item.activityMethod)}}</em>
                  <em :style="{'color':item.activityMethod==7?'#50cbff':'','border':item.activityMethod==7?'1px solid #50cbff':''}" v-else>{{item.activityMethod==7?'单人':'多人'}}</em>
