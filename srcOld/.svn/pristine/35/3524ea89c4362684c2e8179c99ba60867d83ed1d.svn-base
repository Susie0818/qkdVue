<script>
  import Loading from '../loading.vue';
  import {TransferDom, Group, Popup, PopupPicker, Datetime, CheckIcon,InlineXSwitch, XDialog, Actionsheet} from 'vux';
  import selectPhoto from '../plugs/selectPhoto'
  import draggable from 'vuedraggable'

  export default {
    name: "PublishAppointment",
    directives: {
      TransferDom
    },
    components: {
      Loading,
      Group,
      Popup,
      PopupPicker,
      Datetime,
      CheckIcon,
      selectPhoto,
      draggable,
      InlineXSwitch,
      XDialog,
      Actionsheet,
    },
    data() {
      return {
        isloading: false,
        active: [1],
        panel: 1,
        menu: {//认证信息0不需要1需要
          type: 1,
          detail: "",
          require: "",
        },
        type: 2,
        datingMethod: 1,
        datingMethodList:{1:'选缘',2:'抢缘',3:'竞缘',4:'中缘',5:'配缘'},
        fee: 0,
        bail: 0,
        showRule: false,

        shAddress: false,
        addressText: '',
        addressCityId: 0,
        addressAreaId: 0,
        addressList: [],
        addressArr: [],
        addressMenu: {
          menu1: '指定餐厅',
          menu2: '自选地点'
        },

        shDatingTime: false,
        datingTimeText: '',


        shObjTime: false,
        objTimeText: '',
        minuteList: ['00', '05', '10', '15', '20', '25', '30', '35', '40', '45', '50', '55'],

        sex: 0,
        pay: 1,
        carryingFriends: false,
        businessImage: false,
        ownImage: true,

        file: null,
        headimgAttachmentId: null,
        feedMaxImg: 3,//发布最大图片数量
        feedImg: [],//发布图片
        fileList: null,
        datingDesc: '',
        followUp: {//认证信息0不需要1需要
          goHome: "",
          life: "",
          ideal: "",
          road: "",
          other: "",
          more: "",
        },
        certification: 0,
        certificationList: ["不限", "身份认证", "视频认证", "车辆认证", "房产认证"],
        education: 0,
        height: 0,
        age: 0,
        isLottery: false,
      }
    },
    watch: {
      addressArr() {
        if (this.$refs.addressPicker) {
          this.addressText = this.$refs.addressPicker.getNameValues();
          this.addressCityId = this.addressArr[0];
          this.addressAreaId = this.addressArr[1];
        }
      },
    },
    computed: {
      startDate: function () {
        return this.$utils.format(new Date(), 'yyyy-MM-dd');
      },
      endDate: function () {
        return this.$utils.getIntervalDate(this.$utils.format(new Date(), 'yyyy-MM-dd'), 90);
      },
    },
    mounted() {
      this.getDistrict();
    },
    methods: {
      goback() {
        this.$router.go(-1)
      },
      getFullPath(path) {
        return this.$utils.getFullPath(path)
      },
      menuClick(menuIndex) {
        const _this = this;
        if(menuIndex==1){
          _this.menu.type = 1;
          _this.menu.detail= '';
          _this.menu.require= '';
          _this.panel = 1;
        }else if (menuIndex == 2) {
          _this.menu.type = 1;
          _this.menu.detail = 1;
          _this.menu.require = '';
          _this.panel = 2;
        } else if (menuIndex == 3) {
          _this.menu.type = 1;
          _this.menu.detail = 1
          _this.menu.require = 1;
          _this.panel = 3;
        }
      },
      nextClick() {
        const _this = this;
        if (_this.menu.detail == '' || _this.menu.require==1) {
          _this.panel = 2;
          _this.menu.detail = 1;
          _this.menu.require =  '';
          _this.nextText = '下一步';
        } else if (_this.menu.detail == 1 && _this.menu.require == '') {
          _this.panel = 3;
          _this.menu.require = 1;
          _this.nextText = '上一步';
        }
      },
      async getDistrict() {
        let listData = await this.$server.getDistrict();
        this.addressList = listData.data.data;
      },
      async fileBack(obj) {
        const t = this
        if(obj.serverId){
          for(let i=0;i<obj.serverId.length;i++){
            let result = await t.$server.wxMpMedia({
              mediaId:obj.serverId[i]
            })
            t.feedImg.push(result.data.data&&result.data.data.path);
          }
        }else{
          t.fileList = obj.file//提交的图片
          if (t.fileList) {
            for (let i = t.fileList.length; i--;) {
              let param = new FormData() //创建form对象
              param.append('file', t.fileList[i], t.fileList[i].name) //单个图片 ，多个用循环 append 添加
              try {
                const result = await t.$server.uploadPic(param);
                t.feedImg.push(result.data.data.path);
              } catch (e) {

              }
            }

          } else {
            t.$vux.toast.show({
              type: "text",
              text: "图片出错",
              position: "bottom",
              width: "2rem",
            });
          }
        }
      },
      dragEnd: function (evt) {
        console.log('拖动前的索引：' + evt.oldIndex);
        console.log('拖动后的索引：' + evt.newIndex);
        console.log(this.feedImg);
      },
      deleteImg(index) {
        this.feedImg.splice(index, 1);
      },
      finish(){

      },
      click (key) {
        console.log(key)
        if(key=='menu1'){
          this.$router.push({
            path: "/store",
            query:{
              type: this.type,
            }
          });
        }else{
          this.$router.push({
            path: "/map"
          });
        }
      },
    }
  }
</script>

